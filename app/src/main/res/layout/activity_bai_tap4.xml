<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaiTap4Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Thông Tin Cá Nhân"
            android:background="@color/colorBlackBlue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Họ Tên:"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Họ Và Tên"
                android:inputType="text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CMND:"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Số CMND"
                android:inputType="numberSigned"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bằng Cấp"
            android:background="@color/colorGreen"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3"
            android:id="@+id/rdoGroup"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung Cấp"
                android:layout_weight="1"
                android:id="@+id/rdoTrungCap"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cao Đẳng"
                android:layout_weight="1"
                android:id="@+id/rdoCaoDang"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đại Học"
                android:layout_weight="1"
                android:id="@+id/rdoDaiHoc"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở Thích"
            android:background="@color/colorGreen"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3"
            >
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Đọc Báo"
                android:layout_weight="1"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Đọc Sách"
                android:layout_weight="1"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Đọc Coding"

                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>